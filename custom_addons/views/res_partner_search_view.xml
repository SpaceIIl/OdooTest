<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_filter_inherit_birthdate" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.birthdate</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='type_company']" position="after">
                <filter string="Birthdate" name="filter_birthdate" domain="[('birthdate', '!=', False)]"/>
            </xpath>
            <xpath expr="//filter[@name='group_country']" position="after">
                <filter string="Birthdate" name="birthdate" context="{'group_by': 'birthdate'}"/>
            </xpath>
        </field>
    </record>
</odoo>
